{
  "name": "react-magazine",
  "version": "1.0.3",
  "description": "A lightweight React component for realistic page-flip animations, featuring built-in navigation controls, full TypeScript support, and easy style customization.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "rollup -c rollup.config.mjs --environment FORMAT:esm --watch",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "rollup -c rollup.config.mjs --environment FORMAT:esm",
    "build:cjs": "rollup -c rollup.config.mjs --environment FORMAT:cjs",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "page-flip": "^2.0.7"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.5.0",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rollup": "^4.57.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "react",
    "pageflip",
    "flipbook",
    "magazine",
    "book",
    "page-turn",
    "page-flip",
    "flip-book",
    "typescript",
    "react-component"
  ],
  "author": "Gnanaprakash",
  "license": "MIT",
  "homepage": "https://github.com/Gnanaprakash-Dev/react-magazine#readme",
  "bugs": {
    "url": "https://github.com/Gnanaprakash-Dev/react-magazine/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gnanaprakash-Dev/react-magazine.git"
  }
}
